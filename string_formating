#replacing characters in  string

balance = "1000kes"
amount_added ="50kes"

cleaned_balance = balance.replace("kes","")

print("cleaned_balance:",cleaned_balance)

cleaned_amount_added= amount_added.replace("kes","")

print("cleaned_amount_balance",cleaned_amount_added)

#ryans answer
new_balance=int(cleaned_balance)+int(cleaned_amount_added)

print("the new balance is:",new_balance)

#final balance
add = "kes"
final_balance = str(new_balance) + str(add)

print(f"confirmed you have received {amount_added} from Phillip.Your new MPESA balance is {final_balance}")
